# Database Connection
# Replace with your actual PostgreSQL credentials
DATABASE_URL=postgresql://username:password@localhost:5432/binderapp

# Application Port (optional, default is 5000)
# Change this if port 5000 is already in use
PORT=3000

# Pokemon TCG API Key (required for card search functionality)
# Get your API key at https://dev.pokemontcg.io/
POKEMON_TCG_API_KEY=your_pokemon_tcg_api_key

# Session Secret (optional, but recommended to change in production)
SESSION_SECRET=pokemon-card-album-secret-replace-this-in-production